@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";

}
    <!-- Right bar -->
    <div class="row">
        <div class="col-lg-3 d-none d-lg-block" id="leftBar">
        <div class="bar-item choosed" id="courses">
                <img class="bar-icon" src="image/home_icon.png" />
                <div class="bar-item-name">General information</div>
            </div>
        <div class="bar-item unchoosed" id="projects">
                <img class="bar-icon" src="image/works_icon.png" />
                <div class="bar-item-name">My projects</div>
            </div>
        <div class="bar-item unchoosed" id="my_courses">
                <img class="bar-icon" src="image/chip_icon.png" />
                <div class="bar-item-name">My courses</div>
            </div>
        <div class="bar-item unchoosed" id="cart">
                <img class="bar-icon" src="image/cart_black.png" />
                <div class="bar-item-name">Cart</div>
            </div>
        </div>
        <!-- Central column -->
        <div class="test col-lg-6 d-none d-lg-block">


        @{
            var chosenPartial = ViewData["ChosenPartial"] as string;
        }

        @if (!string.IsNullOrEmpty(chosenPartial))
        {
            switch (chosenPartial)
            {
                case "_CourseDetails":
                    @await Html.PartialAsync("_CourseDetails", new MyCourses.Pages.Shared._CourseDetailsModel())
                    break;
                case "_Projects":
                    @await Html.PartialAsync("_Projects", new MyCourses.Pages.Shared._MyProjectsModel())
                    break;
                case "_MyCourses":
                    @await Html.PartialAsync("_MyCourses", new MyCourses.Pages.coursesModel())
                    break;
                case "_Cart":
                    break;
                    // Add more cases for other partial views if needed
            }
        }

        </div>

        <!-- Left bar -->
        <div class="col-lg-3 col-12 leftBar">
            <img class="profileImg" src="~/image/profile_photo.webp" />
            <h1 class="tutor-name">Illia Branchuk</h1>
            <h2 class="tutor-specialization">Senior Software Developer</h2>

            <div class="left-bar-section">
                <div class="righ-left-row-container">
                    <div class="section-title">Projects</div>
                    <a href="my_projects.html" class="view-all-btn">View all &#8594;</a>
                </div>
                <div class="row-container">
                    <div class="app-icon-div">
                        <img class="application-icon" src="image/android_icon.png" />
                    </div>
                    <a id="app-name"
                       href="https://play.google.com/store/apps/details?id=com.nike.ntc">Nike Training Club</a>
                </div>

                <div class="row-container">
                    <div class="app-icon-div">
                        <img class="application-icon" src="image/web.png" />
                    </div>
                    <a id="app-name" href="https://transit9.com/product/">Transit9</a>
                </div>

                <div class="righ-left-row-container">
                    <div class="section-title">Skills</div>
                    <a class="view-all-btn">View all &#8594;</a>
                </div>

                <div class="row-container">
                    <div class="app-icon-div">
                        <img class="application-icon" src="image/android_icon.png" />
                    </div>
                    <a id="app-name">Android SDK</a>
                </div>

                <div class="row-container">
                    <div class="app-icon-div">
                        <img class="application-icon" src="image/react_icon.png" />
                    </div>
                    <a id="app-name">React native</a>
                </div>

                <div class="row-container">
                    <div class="app-icon-div">
                        <img class="application-icon" src="image/java_icon.png" />
                    </div>
                    <a id="app-name">Java</a>
                </div>
            </div>
        </div>
    </div>



<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

<script>
    $(document).ready(function () {
        // Handle click events for clickableDiv elements
        $(".bar-item").click(function () {
            var chosenPartial = $(this).attr("id");
            loadPartialView(chosenPartial);
        });

        // Function to load partial views asynchronously
        function loadPartialView(chosenPartial) {
            console.log("ON CLICK " + '@Url.Action("LoadPartialView", "YourController")' + '?chosenPartial=' + chosenPartial);  // Corrected line

            $.ajax({
                url: '@Url.Action("LoadPartialView", "YourController")' + '?chosenPartial=' + chosenPartial,
                type: 'GET',
                success: function (result) {
                    $("#partialViewContainer").html(result);
                },
                error: function (error) {
                    console.log(error);
                }
            });
        }
    });  // Corrected line
</script>
